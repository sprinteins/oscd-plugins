{
	"name": "@oscd-plugins/type-distributor",
	"private": true,
	"version": "0.3.3",
	"type": "module",
	"scripts": {
		"//====== DEV ======//": "",
		"dev": "vite",
		"//====== BUILD ======//": "",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"preview": "vite preview",
		"//====== INTEGRATED ======//": "",
		"integrated": "concurrently 'npm:build:watch' 'npm:preview'",
		"//====== TEST ======//": "",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:ui:open": "vitest --ui --open",
		"//====== SVELTE ======//": "",
		"check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json --noEmit"
	},
	"files": ["dist"],
	"exports": {
		".": {
			"types": "./dist/plugin.d.ts",
			"default": "./dist/plugin.js"
		}
	},
	"devDependencies": {
		"@lucide/svelte": "^0.562.0",
		"@openscd/oscd-api": "^0.1.6",
		"@openscd/oscd-editor": "^1.8.0",
		"@oscd-plugins/core": "workspace:^",
		"@oscd-plugins/core-api": "workspace:^",
		"@oscd-plugins/core-standard": "workspace:^",
		"@oscd-plugins/core-ui-svelte": "workspace:^",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tsconfig/svelte": "^5.0.6",
		"@types/uuid": "^10.0.0",
		"@vitest/coverage-v8": "^4.0.17",
		"@vitest/ui": "^4.0.17",
		"autoprefixer": "^10.4.23",
		"concurrently": "^7.6.0",
		"jsdom": "^21.1.1",
		"postcss": "^8.5.6",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.19",
		"tailwindcss-animate": "^1.0.7",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"uuid": "^10.0.0",
		"vite": "^6.4.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.17"
	}
}
