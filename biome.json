{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"packages/core/src/scd-events-v1/edit.scd-events-v1.ts",
			"packages/core/src/scd-events-v1/open.scd-events-v1.ts",
			"packages/core/src/scd-xml/foundation.ts",
			"package/create-plugin/template/src/**/*.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"**/*.cjs",
			"**/dist",
			"**/.DS_Store",
			"**/node_modules",
			"**/.svelte-kit",
			"**/.env",
			"**/.env.*",
			"**/pnpm-lock.yaml",
			"**/package-lock.json",
			"**/yarn.lock"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
